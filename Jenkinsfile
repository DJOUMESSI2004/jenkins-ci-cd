pipeline {
    agent any
    stages {
        
        stage('Build app') {
            steps {
                echo 'the app is building.....!'
                echo 'pull request by jenkins......'
                echo 'i love jenkins.......'
            }
        }

         stage('Test app') {
            steps {
                echo 'Testing the application......'
            }
        }


         stage('Deploy app') {
            steps {
                echo 'Deploy the application .....'
            }
        }
    }
}
